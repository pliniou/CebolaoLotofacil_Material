<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="@dimen/widget_content_padding">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/ic_lotofacil_logo"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/widget_title"
            style="@style/Widget.Cebolao.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/widget_last_draw_title" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:scaleType="fitCenter"
            android:padding="6dp"
            android:contentDescription="@string/content_desc_refresh"
            android:tint="@color/light_text_secondary" />
    </LinearLayout>

    <!-- Conteúdo (Bolas) -->
    <LinearLayout
        android:id="@+id/widget_numbers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_small">
        <!-- Inflado via código -->
    </LinearLayout>

    <!-- Loading -->
    <TextView
        android:id="@+id/widget_loading_text"
        style="@style/Widget.Cebolao.Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/general_loading"
        android:visibility="gone" />

</RelativeLayout>