<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="@dimen/widget_content_padding">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:src="@drawable/ic_widget_proximo"
            android:contentDescription="@null"
            android:tint="@color/widget_primary" />

        <TextView
            android:id="@+id/widget_title"
            style="@style/Widget.Cebolao.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/widget_next_contest_title" />

        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:padding="6dp"
            android:tint="@color/light_text_secondary"
            android:contentDescription="@string/content_desc_refresh"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_prize"
            style="@style/Widget.Cebolao.Text.Highlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/widget_date"
            style="@style/Widget.Cebolao.Text.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="--/--"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_loading_text"
        style="@style/Widget.Cebolao.Text.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/general_loading"
        android:visibility="gone"/>

</RelativeLayout>