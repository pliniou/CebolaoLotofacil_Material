<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_ball_margin">

    <TextView
        android:id="@+id/widget_ball_text"
        android:layout_width="@dimen/widget_ball_size"
        android:layout_height="@dimen/widget_ball_size"
        android:layout_gravity="center"
        android:background="@drawable/widget_ball_background"
        android:fontFamily="@font/stacksansnotch_bold"
        android:gravity="center"
        android:textColor="@color/light_text_primary"
        android:textSize="@dimen/widget_ball_text_size"
        android:includeFontPadding="false"
        tools:text="25" />

</FrameLayout>